<div class="container" controller="MainController">
    <md-toolbar>
        <div class="md-toolbar-tools">
          <h2 class="md-flex">LAB-SAILS</h2>
        </div>
      </md-toolbar>

      <md-nav-bar>
          <md-nav-item md-nav-href="#list" name="list">TODOS</md-nav-item>
          <md-nav-item md-nav-href="#create" name="create">CREATE NEW</md-nav-item>
      </md-nav-bar>

    <div ng-view layout-padding></div>
</div>


<script type="text/ng-template" id="partials/todos.html">
    <md-list flex> 
        <md-list-item ng-repeat="entry in entries">
            <p> {{ entry.name }} </p>
            <md-checkbox class="md-secondary" ng-model="entry.completed" ng-change="update(entry)"></md-checkbox>
          </md-list-item>
    </md-list>    
</script>

<script type="text/ng-template" id="partials/create-todo.html">
  
  <form name="todoForm" flex novalidate ng-submit="create()">  
    <div layout="column">
        <md-input-container>
            <label>Name</label>
            <input ng-model="entry.name" required/>
            <div ng-messages="todoForm.entry.name.$error">
                <div ng-message="required">This is required.</div>
            </div>
        </md-input-container>
        <md-input-container>
            <label>Description</label>
            <textarea ng-model="entry.description" md-maxlength="150" rows="10" md-select-on-focus></textarea>
        </md-input-container>
    </div>
    <div layout="row" layout-align="end end">
        <md-button class="md-raised md-primary" type="submit">CREATE</md-button>
    </div>
  </form>
</script>